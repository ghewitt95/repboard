<div class="container-fluid py-5" style="background-color: #FOF9F9; min-height:100vh;">
  <div class="container">
    <div class="row"
    <div class="col-lg-8 mx-auto">

      <div class="card border-0 shadow-sm mb-4" style="border-left: 4px solid #028090 !important;">
        <div class="card-body">
          <h1 class="fw-bold mb-1" style="color: #0D1B2A">My Reviews</h1>
          <p class="text-muted mb-0">Reviews you have submitted</p>
        </div>
      </div>

      <% if @reviews.any? %>
        <% @reviews.each do |review| %>
          <div class="card mb-3 border-0 shadow-sm" style="border-left: 4px solid #028090 !important;">
            <div class="card-body">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <h5 class ="card-title mb-1">
                      <%= link_to review.reviewee.display_name, "/profile/#{review.reviewee.slug}", style: "color: #028090; text-decoration: none; font-weight: 600;" %>
                    </h5>
                    <span><%= "⭐" * review.stars %></span>
                    <p class="mt-2 mb-1"><%= review.body %></p>
                    <small class="text-muted"><%= review.created_at.strftime("%B %d, %Y") %></small>
                  </div>
                  <div class="d-flex gap-2">
                    <button
                  class="btn btn-sm"
                  style="border: 1px solid #028090; color: #028090; background: white;"
                      onmouseover="this.style.backgroundColor='#028090'; this.style.color='white';"
                      onmouseout="this.style.backgroundColor='white'; this.style.color='#028090';"
                      onclick="navigator.clipboard.writeText('<%= root_url %>profile/<%= review.reviewee.slug %>').then(() => { this.textContent = '✓ Copied!'; setTimeout(() => { this.textContent = 'Share'; }, 2000); })">Share</button>
                    <%= button_to "Delete", "/delete_review/#{review.id}", method: :get, class: "btn btn-outline-danger btn-sm", data: { confirm: "Are you sure?" } %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
              <p class="text-muted mb-3"> You haven't submitted any reviews yet.</p>
              <a href="/" class="btn btn-sm" style="background-color: #028090; color: white;">Find a Freelancer</a>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
