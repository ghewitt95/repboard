<div class="container py-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">

      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h1 class="fw-bold"><%= @freelancer.display_name %></h1>
          <p class="text-muted"><%= @freelancer.bio %></p>
        </div>
      </div>

      <%= turbo_frame_tag "reviews" do %>
        <div class="d-flex align-items-center gap-2 mb-4">
          <span class="fs-4">⭐ <%= @freelancer.average_rating || "No ratings yet" %></span>
          <span class="text-muted">· <%= @freelancer.review_count %> reviews</span>
        </div>

        <h2 class="mb-3">Reviews</h2>

        <% @reviews.each do |review| %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <strong><%= review.reviewer.display_name %></strong>
                <span><%= "⭐" * review.stars %></span>
              </div>
              <p class="mt-2 mb-1"><%= review.body %></p>
              <small class="text-muted"><%= review.created_at.strftime("%B %d, %Y") %></small>
            </div>
          </div>
        <% end %>

        <hr>

        <% if user_signed_in? %>
          <div class="card shadow-sm">
            <div class="card-body">
              <h2 class="card-title mb-4">Leave a Review</h2>
              <%= form_tag("/insert_review") do %>
                <input type="hidden" name="query_reviewee_id" value="<%= @freelancer.id %>">

                <div class="mb-3" data-controller="star-rating">
                  <label class="form-label fw-bold">Your Rating</label>
                  <input type="hidden" name="query_stars" data-star-rating-target="input" value="0">
                  <div>
                    <% (1..5).each do |i| %>
                      <span
                        data-star-rating-target="star"
                        data-value="<%= i %>"
                        data-action="click->star-rating#select mouseover->star-rating#highlight mouseout->star-rating#reset"
                        style="cursor:pointer; font-size: 2rem;">
                        ☆
                      </span>
                    <% end %>
                  </div>
                </div>

                <div class="mb-3">
                  <label class="form-label fw-bold">Your Review</label>
                  <textarea name="query_body" class="form-control" rows="4" required placeholder="Share your experience..."></textarea>
                </div>

                <div class="d-grid">
                  <button type="submit" class="btn btn-primary btn-lg">Submit Review</button>
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="text-center py-4">
            <%= link_to "Sign in to leave a review", new_user_session_path, class: "btn btn-outline-primary", data: { turbo: false } %>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
