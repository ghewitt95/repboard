<div class="container py-5">
  <div class="row"
    <div class="col-lg-8 mx-auto">
    <h1 class="fw-bold">My Reviews</h1>
    <p class="text-muted">Reviews you have submitted</p>

    <hr>

    <% if @reviews.any? %>
      <% @reviews.each do |review| %>
        <div class="card mb-3">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <h5 class ="card-title mb-1">
                  <%= link_to review.reviewee.display_name, "/profile/#{review.reviewee.slug}" %>
                </h5>
                <span><%= "⭐" * review.stars %></span>
                <p class="mt-2 mb-1"><%= review.body %></p>
                <small class="text-muted"><%= review.created_at.strftime("%B %d, %Y") %></small>
              </div>
              <div class="d-flex gap-2">
                <button
                  class="btn btn-outline-secondary btn-sm"
                  onclick="navigator.clipboard.writeText('<%= root_url %>profile/<%= review.reviewee.slug %>').then(() => { this.textContent = '✓ Copied!'; setTimeout(() => { this.textContent = 'Share'; }, 2000); })">Share</button>
                <%= button_to "Delete", "/delete_review/#{review.id}", method: :get, class: "btn btn-outline-danger btn-sm", data: { confirm: "Are you sure?" } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="card">
        <div class="card-body text-center text-muted">
          <p> You haven't submitted any reviews yet.</p>
        </div>
      </div>
    <% end %>

  </div>
</div>
</div>
