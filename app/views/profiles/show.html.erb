<div class="container py-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">

      <div class="card shadow-sm mb-4" style="border-top: 4px solid #028090;">
        <div class="card-body">
          <div class="d-flex align-items-center gap-3">
            <% if @freelancer.avatar_url.present? %>
              <img src="<%= @freelancer.avatar_url %>" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
            <% else %>
              <div class="rounded-circle d-flex align-items-center justify-content-center fw-bold" style="width: 80px; height: 80px; background-color: #028090; color: white; font-size: 2rem;">
                <%= @freelancer.display_name&.first&.upcase %>
              </div>
            <% end %>
            <div>
              <h1 class="fw-bold mb-1"><%= @freelancer.display_name %></h1>
              <p class="text-muted mb-0"><%= @freelancer.bio %></p>
            </div>
          </div>

 <% if @freelancer.links.any? %>
      <div class="mt-3">
        <% @freelancer.links.order(:position).each do |link| %>
          <a href="<%= link.url %>" target="_blank" class="btn btn-sm me-2 mb-2" style="border-color: #028090; color: #028090;">
            <%= link.label %>
          </a>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <%= turbo_frame_tag "reviews" do %>
        <div class="d-flex align-items-center gap-2 mb-4">
          <span class="fs-4">⭐ <%= @freelancer.average_rating || "No ratings yet" %></span>
          <span class="text-muted">· <%= @freelancer.review_count %> reviews</span>
        </div>

        <h2 class="mb-3">Reviews</h2>

        <%= render @reviews %>

        <hr>

        <% if user_signed_in? && !current_user.reviewable? %>
          <div class="card shadow-sm">
            <div class="card-body">
              <h2 class="card-title mb-4">Leave a Review</h2>
              <%= form_tag("/insert_review", data: { turbo: false, controller: "review-form", action: "submit->review-form#submit" }) do %>
                <input type="hidden" name="query_reviewee_id" value="<%= @freelancer.id %>">

                <div class="alert alert-danger d-none" data-review-form-target="error"></div>

                <div class="mb-3" data-controller="star-rating">
                  <label class="form-label fw-bold">Your Rating</label>
                  <input type="hidden" name="query_stars" data-star-rating-target="input" data-review-form-target="stars" value="0">
                  <div>
                    <% (1..5).each do |i| %>
                      <span
                        data-star-rating-target="star"
                        data-value="<%= i %>"
                        data-action="click->star-rating#select mouseover->star-rating#highlight mouseout->star-rating#reset"
                        style="cursor:pointer; font-size: 2rem;">
                        ☆
                      </span>
                    <% end %>
                  </div>
                </div>

                <div class="mb-3">
                  <label class="form-label fw-bold">Your Review</label>
                  <textarea name="query_body" class="form-control" rows="4" data-review-form-target="body" placeholder="Share your experience..."></textarea>
                </div>

                <div class="d-grid">
                  <button type="submit" class="btn btn-lg" style="background-color: #028090; border-color: #028090; color: white;">Submit Review</button>
                </div>
              <% end %>
            </div>
          </div>
        <% elsif user_signed_in? && current_user.reviewable? %>
          <p class="text-muted text-center py-4">Only clients can leave reviews.</p>
        <% else %>
          <div class="text-center py-4">
            <%= link_to "Sign in to leave a review", new_user_session_path, class: "btn btn-outline-secondary", style:"color: #028090; border-color: #028090;", data: { turbo: false } %>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
