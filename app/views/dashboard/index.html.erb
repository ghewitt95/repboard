<div class="container-fluid py-5" style="background-color: #F0F9F9; min-height: 100vh;">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">

        <div class="card shadow-sm mb-4" style="border-top: 4px solid #028090;">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h1 class="fw-bold mb-1">My Dashboard</h1>
                <p class="text-muted mb-0">⭐ <%= current_user.average_rating || "No ratings yet" %> · <%= current_user.review_count %> reviews</p>
              </div>

              <div data-controller="clipboard">
                <input type="hidden" data-clipboard-target="source" value="<%= request.base_url %>/profile/<%= current_user.slug %>">
                <button class="btn btn-sm" style="background-color: #028090; border-color: #028090; color: white;" data-action="click->clipboard#copy" data-clipboard-target="button">
                  Copy Profile Link
                </button>
              </div>
            </div>
          </div>
        </div>

        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h2 class="card-title">Rating Over Time</h2>
            <%= line_chart @chart_data, colors: ["#028090"] %>
          </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2 class="mb-0">My Reviews</h2>
          <%= form_tag("/dashboard", method: :get, data: { controller: "auto-submit", turbo_frame: "_top" }) do %>
            <select name="stars" class="form-select" data-action="change->auto-submit#submit">
              <option value="">All Stars</option>
              <option value="5" <%= "selected" if params[:stars] == "5" %>>⭐⭐⭐⭐⭐</option>
            <option value="4" <%= "selected" if params[:stars] == "4" %>>⭐⭐⭐⭐</option>
            <option value="3" <%= "selected" if params[:stars] == "3" %>>⭐⭐⭐</option>
            <option value="2" <%= "selected" if params[:stars] == "2" %>>⭐⭐</option>
            <option value="1" <%= "selected" if params[:stars] == "1" %>>⭐</option>
          </select>
        <% end %>
      </div>

                <% if @reviews.any? %>
                  <% @reviews.each do |review| %>
                    <div class="card shadow-sm mb-3" style="border-left: 4px solid #028090;">
                      <div class="card-body">
                        <div class="d-flex justify-content-between">
                          <strong><%= review.reviewer.display_name %></strong>
                          <span><%= "⭐" * review.stars %></span>
                        </div>
                        <p class="mt-2 mb-1"><%= review.body %></p>
                        <small class="text-muted"><%= review.created_at.strftime("%B %d, %Y") %></small>
                      </div>
                    </div>
                  <% end %>
                  <%= paginate @reviews %>
                <% else %>
                  <div class="card shadow-sm">
                    <div class="card-body text-center text-muted py-5">
                      <p class="mb-0">No reviews yet. Share your profile to start collecting feedback!</p>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
