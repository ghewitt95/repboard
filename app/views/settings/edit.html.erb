<div class="container-fluid py-5" style="background-color: #F0F9F9; min-height: 100vh;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7">
        <div class="card shadow-sm">
          <div class="card-body p-4">
            <h2 class="card-title mb-4 fw-bold">Profile Settings</h2>

            <% if notice %>
              <div class="alert alert-success"><%= notice %></div>
            <% end %>

            <%= form_with model: @user, url: "/settings", method: :patch do |f| %>

              <h5 class="fw-bold mb-3" style="color: #028090;">Profile Photo</h5>
              <div class="mb-4">
                <%= f.label :avatar_url, "Photo URL", class: "form-label" %>
                <%= f.text_field :avatar_url, class: "form-control", placeholder: "https://example.com/your-photo.jpg" %>
                <div class="form-text">Paste a link to your profile photo (LinkedIn, Gravatar, etc.)</div>
              </div>

              <h5 class="fw-bold mb-3" style="color: #028090;">Basic Info</h5>
              <div class="mb-3">
                <%= f.label :display_name, "Your Name", class: "form-label" %>
                <%= f.text_field :display_name, class: "form-control" %>
              </div>

              <div class="mb-4">
                <%= f.label :bio, "Short Bio", class: "form-label" %>
                <%= f.text_area :bio, class: "form-control", rows: 3 %>
              </div>

              <h5 class="fw-bold mb-3" style="color: #028090;">Your Links</h5>
              <div class="form-text mb-3">Add links to your portfolio, LinkedIn, GitHub, or any other site.</div>

              <%= f.fields_for :links do |link_form| %>
                <div class="row mb-2">
                  <div class="col-4">
                    <%= link_form.text_field :label, class: "form-control", placeholder: "Label (e.g. LinkedIn)" %>
                  </div>
                  <div class="col-8">
                    <%= link_form.text_field :url, class: "form-control", placeholder: "https://..." %>
                  </div>
                </div>
              <% end %>

              <div class="d-grid mt-4">
                <%= f.submit "Save Profile", class: "btn btn-lg", style: "background-color: #028090; border-color: #028090; color: white;" %>
              </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
